/* CSS Document Build for The Genesis Project */
/*=======Globals=======*/
body{background:url(../images/bg.jpg) center fixed #ccc;font-family:Arial, Helvetica, sans-serif;font-size:12px;padding:0;margin:0;outline:none;}
a:link {color:#009;outline:none;}
a:visited{color:#6a6ac3;outnline:none;}
a img{border:0px;outline:none;}
label{font-weight:bold;}
input{font-size:12px;}
fieldset{border:1px solid #aaa;padding:3px;}
h3{margin-bottom:3px;padding-bottom:0px;}

/*=======Specials=======*/
.noline{color:#e1e1e1;text-decoration:none;}
.clear{clear:both;}
.hline{border-top:1px solid #ccc;margin:5px 0px;}
#clock{font-weight:normal;}

.borders{width:985px;margin:0 auto;text-align:center;}
.topSection{width:985px;margin:0 auto;}
#pageName{font-weight:bold;font-size:24px;padding-left:10px; text-align:left;margin:0px;}
	#pageName img{position:relative;top:5px;}
#content{background:#fff;width:965px;margin:0 auto;
/* opacity:.9;position: relative; margin: 0 auto;
*/
}
	
img.bg {min-height: 100%;min-width: 1024px;width: 100%;height: auto;position: fixed;top: 0;left: 0;display:none;}
img.bg {left: 50%;margin-left: -512px; }	
	
	
#nav{border:1px solid #aaa;margin:10px 3px;}
	#nav select{width:200px;margin:5px;}
	#nav label{padding-left:5px;}
	#nav fieldset{width:430px;float:right;margin:3px;}
		#nav fieldset img{margin-right:10px;}

	

.seoField{width:500px;}	
.seoArea{height:50px;width:500px;}
.seo{background:#f2f2f2;border:1px solid #999; padding:5px;margin:5px 0px;}
.seo2{background:#f2f2f2;border:1px solid #999; padding:5px;margin:5px 0px;}
	.seo2 textarea{height:200px;}

.border{border:1px solid #aaa;padding:3px;margin:5px 0px;}
	.border1{border:1px solid #aaa;padding:3px;margin:5px 0px;background:#f6f6f6;}
	.border2{border:1px solid #aaa;padding:3px;margin:5px 0px;background:#f2f2ff;}
	.border3{border:1px solid #fff;padding:3px;margin:5px 0px;background:#b10000;color:#fff;font-weight:bold;}
		.border3 b{font-size:14px;}
		.border3 a{color:#fff;} .border3 a:hover{text-decoration:overline;}

/*=======forms=======*/
.row {margin-top:10px;font-size:12px;}
.row label {display: block;float: left;width: 250px;font-size: 12px;text-align: right;padding-right: 10px;font-weight:normal;}	
	.row2 {margin-top:10px;font-size:12px;}
	.row2 label {display: block;float: left;width: 100px;font-size: 12px;text-align: right;padding-right: 10px;font-weight:normal;}
	.btn{background:#fff;border:1px solid #aaa;}
	.btn:hover{background:#aaa;border:1px solid #369;}
		

#author{color:#fff;text-align:center;padding:1px 0px;font-size:9px;margin:0 auto;width:985px;}
	#author a{color:#fff;text-decoration:underline;}
.pageSet{border:1px dotted #aaa;width:200px;float:left;margin:3px;}
.totop{text-align:right;background:#666666;padding:5px;}
	.totop a{color:#fff;font-size:14px;}


#listView li{margin-bottom:3px;}
.rowOdd{ background:#f3f3f3;padding:5px;height:30px;}
.rowEven{background:#6DA3D9;padding:5px;height:30px;}

/*=======imagelist=======*/	
.image{border:1px solid #aaa;margin:5px 0px;padding:5px;overflow:hidden;}
#page{background:#fff;border:1px solid #aaa;overflow:hidden;}
#content {padding:10px;overflow:hidden;}
.highlight{background:#c9e1ff;}
.lineItem{background:#f0f0f0;font-weight:bold;margin-bottom:2px;padding:3px;border:1px solid #aaa;}
.lineItem2{background:#aaa;font-weight:bold;margin-bottom:2px;color:#fff;padding:3px;}

/*=======SEO STUFF=======*/
#seoStuff{background:#fafafa;}
.bRed{color:#f00;}

#txt1{margin-left:5px;border:1px solid #aaa;display:none;}

/* TransMenu */
.transMenu {position:absolute;overflow:hidden;left:-1000px;top:-1000px;}
.transMenu .content {position:absolute;}
.transMenu .items {position:relative;left:0px; top:0px;z-index:2;}
.transMenu.top .items {border-top:none;}
.transMenu .item {color:white;font-size:12px;font-weight: bold;font-family:sans-serif;text-decoration:none;border:none;cursor:pointer;}
.transMenu .background {position:absolute;left:0px; top:0px; z-index:1;-moz-opacity:.8;}
.transMenu .shadowRight {position:absolute;z-index:3;top:0px; width:2px;  -moz-opacity:.4;}
.transMenu .shadowBottom {position:absolute;z-index:1;left:3px; height:2px;-moz-opacity:.4;}
.transMenu .item.hover {background-color:#369;color:#fff;}
.transMenu .item img {margin-left:10px;}