/* CSS Document */
* html #ha {min-height: 100%;}
body {text-align: center;margin:0;padding:0;background-color:#fff;}
img { border-style:none; }
.clear{clear:both;}
/* LOGIN PAGE____________________________________________________________________________________________________________________________________ */
#ha {font-size:11px;font-family: Lucida Sans;text-align:left;line-height:18px;width:820px;padding: 0;margin: 0 auto;background:#fff;color:#666666;}
#ha p {margin: 5px 0;}
#ha a {border: 0;margin: 0;padding:0;text-decoration:none;color: #666666;}
#ha a:hover {text-decoration: none;color: #f90;}
#ha label, #ha .form_label {display: block;margin:10px 0 5px 0;font-weight:bold;width:auto;}
.headline {margin:0px 0px 10px 0px;padding:45px 0 10px 0; }
.logo {text-align:center;margin:0px;}
.title {color:#470101;font-size:12px;text-transform:uppercase;letter-spacing:1px;text-align:center; }
.hline {background-color:#eee;height:1px;line-height:1px;margin:10px 0px; }
.copyright {color:#CCCCCC;font-size:9px;text-align:center;line-height:15px;clear:both; }

#ha .actionBar {padding: 5px 10px;margin: 0 0 15px 0;background: #E7F0DF;border: 1px solid #D0D9C9;}
	#ha .actionBar2 {padding: 5px 10px;margin: 0 0 15px 0;background: #E7F0DF;border: 1px solid #D0D9C9;}

#ha .actionBar ul {list-style-type: none;margin: 0;padding: 0;overflow: auto;width: 100%;}
#ha .actionBar ul li{list-style-type: none;display:block;float:left;margin: 0 0.2em;padding: 0.3em;}
#ha .actionBar p{line-height: 1.4em;}

#ha .actionBar a{color:#666666;margin:0 10px 0 0;white-space:nowrap;border-color:#999;border-style:dotted;border-width: 0 1px 0 0;padding: 0 10px 0 0;}
	#ha .actionBar2 a{color:#666666;margin:0 0px 0 10px;white-space:nowrap;border-color:#999;border-style:dotted;border-width: 0 0 0 1px;padding: 0 0 0 10px;}
	
#ha fieldset{margin:10px 5px;padding:10px;border: 1px solid #eee;}
h2 {font-size: 150%;font-weight:normal;margin:0;padding:10px;COLOR:#fff;background:#333;}
#menu {padding: 5px 0;height: 20px;line-height:20px;background-color:#eee;border:1px solid #ddd;}
#menu ul {margin:0;padding:0;list-style-type:none;}
#menu ul li {padding:0;display:inline;border-color:#ccc;border-style: none dotted none none;border-width: 0 1px 0 0;}
#menu a {padding:0 5px;margin: 0 5px;text-decoration:none;text-transform:uppercase;color:#333;font-size:80%;letter-spacing:1px;}
	#menu a:hover{color: #f90;}
.actionBar a:hover{color: #000;}
.bline {background-color:#eee;height:1px;line-height:1px;margin:30px 0px 10px 0;}
#ha .buttonBar {padding:15px 5px 0;margin:15px 0 0 0;border-top:#ccc 1px dotted;}
#ha .buttonBar a, #ha .buttonBar input{padding: 5px;margin:0 5px 0 0;text-decoration:none;border:1px solid #ddd;cursor:pointer;color:#666666;background:#eee;}
#ha .buttonBar a{line-height: 2em;}
#ha .buttonBar a:hover {text-decoration:none;color:#fff;background:#f90;}
#ha .buttonBar input:hover{text-decoration:none;color:#fff;background:#f90;}

/* FORM FIELDS____________________________________________________________________________________________________________________________________ */
input, select, textarea{font-size: 100%;}


#ha .row       {margin-top:10px;}
#ha .row label {display:block;float:left;width:100px;text-align:right;padding-right:10px;font-size:1.2em;}
#ha .row a{color:#0c3;}
#ha .boldLabel {font-weight:bold;width:100px;color:#f00;margin-right: 5px;}
#ha .formField {width:220px;margin-top:10px;border:1px solid #ccc;}
#ha button     {margin:0px 2px 0px 0px;}
#ha input[type="checkbox"] {margin-top:10px;}
#ha textarea   {margin-top:10px;width:220px;height:130px;}
	
#ha .block{width:400px;float:left;}
#rssBot .block{width:400px;float:left;}


.err{font-weight:bold;color:#dc0000;}
.good{font-weight:bold;color:#060;}
.norm{font-weight:bold;color:#000;}

/* RSS Header colors */
.active{background:#3c0;color:#fff;font-weight:bold;font-size:1.3em;padding:3px;}
.inactive{background:#c30;color:#fff;font-weight:bold;font-size:1.3em;padding:3px;}